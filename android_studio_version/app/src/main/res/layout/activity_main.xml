<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:launchMode="singleTop"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/TestButton"
            android:layout_width="414dp"
            android:layout_height="39dp"

            android:layout_marginTop="88dp"
            android:text="@string/test_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bassclefswitch" />

        <com.google.android.material.slider.Slider
            android:id="@+id/DifficultySlider"
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="4dp"
            android:stepSize="1.0"
            android:valueFrom="1.0"
            android:valueTo="10.0"
            app:haloColor="#129A9A9A"
            app:layout_constraintBottom_toTopOf="@+id/RangeSlider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbColor="#000000"
            app:tickColorActive="#FFFFFF"
            app:tickColorInactive="#000000"
            app:trackColorActive="#000000"
            app:trackColorInactive="#61000000" />

        <com.google.android.material.slider.Slider
            android:id="@+id/RangeSlider"
            android:layout_width="313dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:stepSize="1.0"
            android:valueFrom="1.0"
            android:valueTo="52.0"
            app:layout_constraintBottom_toTopOf="@+id/LowestNoteSlider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DifficultySlider" />

        <com.google.android.material.slider.Slider
            android:id="@+id/LowestNoteSlider"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:stepSize="1.0"
            android:valueFrom="1.0"
            android:valueTo="52.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RangeSlider" />


        <TextView
            android:id="@+id/noteCount"
            android:layout_width="78dp"
            android:layout_height="20dp"
            android:layout_marginTop="43dp"
            android:text="@string/note_count"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="inherit"
            app:layout_constraintEnd_toStartOf="@+id/DifficultySlider"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/range"
            android:layout_width="53dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:text="Range:"
            app:layout_constraintEnd_toStartOf="@+id/RangeSlider"
            app:layout_constraintTop_toBottomOf="@+id/noteCount" />

        <TextView
            android:id="@+id/lowest"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="2dp"
            android:text="Lowest Note:"
            app:layout_constraintEnd_toStartOf="@+id/LowestNoteSlider"
            app:layout_constraintTop_toBottomOf="@+id/range" />


        <Switch
            android:id="@+id/bassclefswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Bass clef:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trebleclefswitch" />

        <Switch
            android:id="@+id/trebleclefswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:text="Treble clef:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LowestNoteSlider" />

        <Switch
            android:id="@+id/sharpSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="52dp"
            android:text="Sharps"
            app:layout_constraintStart_toEndOf="@+id/trebleclefswitch"
            app:layout_constraintTop_toBottomOf="@+id/LowestNoteSlider" />

        <Switch
            android:id="@+id/flatSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="flats"
            app:layout_constraintStart_toEndOf="@+id/bassclefswitch"
            app:layout_constraintTop_toBottomOf="@+id/sharpSwitch" />

        <Switch
            android:id="@+id/doubleSharp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:text="doublesharps"
            app:layout_constraintStart_toEndOf="@+id/sharpSwitch"
            app:layout_constraintTop_toBottomOf="@+id/LowestNoteSlider" />

        <Switch
            android:id="@+id/doubleflat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="doubleflats"
            app:layout_constraintStart_toEndOf="@+id/flatSwitch"
            app:layout_constraintTop_toBottomOf="@+id/doubleSharp" />

        <com.example.chordsightreadingredo.MyCanvas

            android:id="@+id/TestCanvas"
            android:layout_width="338dp"
            android:layout_height="353dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/ShowSettings"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"


            android:text="Show Settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LowestNoteSlider" />

        <TextView
            android:id="@+id/NoteRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="229dp"
            tools:layout_editor_absoluteY="461dp"
            tools:ignore="MissingConstraints" />


        <!--   <com.example.chordsightreading.MyCanvas
           android:id="@+id/myCanvas3"
           android:layout_width="411dp"
           android:layout_height="548dp"
           app:layout_constraintTop_toBottomOf="@+id/TestButton"
           tools:layout_editor_absoluteX="0dp" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>